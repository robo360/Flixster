<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop= "8dp"
    android:layout_marginBottom = "10dp"
    android:background="#A4A4A4A4"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D5CECE">

        <ImageView
            android:id="@+id/ivPoster"
            android:layout_width="157dp"
            android:layout_height="270dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:scaleType="center"
            card_view:layout_constraintStart_toStartOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/ivPoster"
            android:contentDescription="Title"
            android:textAlignment="center"
            android:textColor="#515151"
            android:textSize="24sp"
            tools:text="Fast Furious Presents: Hobbs Shaw" />

        <TextView
            android:id="@+id/tvOverview"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="4dp"
            android:layout_toEndOf="@+id/ivPoster"
            android:maxLines="6"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#575656"
            tools:text="After he and his wife are murdered, marine Ray Garrison is resurrected by a team of scientists. Enhanced with nanotechnology, he becomes a superhuman, biotech killing machineâ€”'Bloodshot'.
        As Ray first trains with fellow super-soldiers, he cannot recall anything from his former life. But when his memories flood back and he remembers the man that killed both him and his wife,
        he breaks out of the facility to get revenge, only to discover that there's more to the conspiracy than he thought." />

        <Button
            android:id="@+id/btnMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOverview"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="62dp"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="66dp"
            android:layout_toEndOf="@+id/ivPoster"
            android:backgroundTint="#009688"
            android:elevation="8dp"
            android:text="More"
            android:textColor="#F6F3F3" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>